<%- include('../includes/head.ejs') %>


</head>

<body>
    <%- include('../includes/navigation.ejs') %> 
    <main class="bg-slate">
        <div class="flex justify-center items-center h-screen w-full">
            <div class="w-1/2 bg-blue rounded shadow-2xl p-8 mt-4">
                <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Add Product</h1>
                <form action="<%=editing ? '/admin/edit-product' : '/admin/add-product'%>" method="post" >
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-gray-900" for="title">Title</label>
                        <input class="border py-2 px-3 text-grey-800" type="text" name="title" id="title" value="<%= editing ? product.title : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-gray-900" for="imageUrl">Image URL</label>
                        <input class="border py-2 px-3 text-grey-800" type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-gray-900" for="price">Harga</label>
                        <input class="border py-2 px-3 text-grey-800" type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-gray-900" for="description">Description</label>
                        <textarea name="description" id="description" rows="5"><%= editing ? product.description : ''%></textarea>
                    </div>
                    <button class="block bg-purple hover:bg-purple text-slate uppercase text-lg mx-auto p-4 medium rounded-lg text-sm px-5 py-2.5 mb-2" type="submit"><%= editing ? 'Update Product' : 'Add Product' %></button>
                </form>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>