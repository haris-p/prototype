<%- include('../includes/head.ejs') %>


</head>

<body>
    <%- include('../includes/navigation.ejs') %> 
    <main class="bg-slate">
        <div class="flex justify-center items-center h-screen w-full">
            <div class="w-1/2 bg-teal-500 rounded shadow-2xl p-8 mt-4">
                <h1 class="block w-full text-center text-white text-2xl font-bold mb-6">Add Product</h1>
                <form action="<%=editing ? '/admin/edit-product' : '/admin/add-product'%>" method="post" >
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="productName">Nama Produk</label>
                        <input class="border py-2 px-3 text-grey-800 bg-gray-100" type="text" name="productName" id="productName" value="<%= editing ? product.productName : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="imageUrl">Image URL</label>
                        <input class="border py-2 px-3 text-grey-800 bg-gray-100" type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="price">Harga</label>
                        <input class="border py-2 px-3 text-grey-800 bg-gray-100" type="number" name="price" id="price" step="any" value="<%= editing ? product.price : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="description">Description</label>
                        <textarea class="bg-gray-100" name="description" id="description" rows="5"><%= editing ? product.description : ''%></textarea>
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="collection">Koleksi</label>
                        <input class="border py-2 px-3 text-grey-800 bg-gray-100" type="text" name="collection" id="collection" value="<%= editing ? product.collection : ''%>">
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="mb-2 font-bold text-lg text-white" for="productType">Jenis Produk</label>
                        <input class="border py-2 px-3 text-grey-800 bg-gray-100" type="text" name="productType" id="productType" value="<%= editing ? product.productType : ''%>">
                    </div>
                    <button class="block bg-green-700  hover:bg-teal-500 text-slate uppercase text-lg mx-auto p-4 medium rounded-lg text-sm px-5 py-2.5 mb-2" type="submit"><%= editing ? 'Update Product' : 'Add Product' %></button>
                </form>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
<%- include('../includes/end.ejs') %>